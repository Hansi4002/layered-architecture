<AnchorPane prefHeight="82.0" prefWidth="1213.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ijse.layeredarchitecture.controller.ManageNavigationBar">

      <HBox alignment="CENTER_LEFT" prefHeight="82.0" prefWidth="1198.0" spacing="10.0" style="-fx-background-color: #096B68;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
